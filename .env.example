# =============================================================================
# ppxai Configuration
# =============================================================================

# Provider Selection (perplexity or custom)
# MODEL_PROVIDER=perplexity

# SSL verification for HTTPS connections (set to false for corporate proxies)
# Applies to both Perplexity and custom endpoints
# SSL_VERIFY=true

# =============================================================================
# Perplexity AI Configuration
# =============================================================================
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# =============================================================================
# Custom Self-Hosted Model Configuration (e.g., vLLM, Ollama, etc.)
# =============================================================================

# API Key for custom endpoint (can be any value for local models)
# CUSTOM_API_KEY=your_custom_api_key_here

# Custom endpoint URL (OpenAI-compatible API)
# CUSTOM_MODEL_ENDPOINT=https://your-model-endpoint.com/v1

# Custom provider display name
# CUSTOM_PROVIDER_NAME=My Self-Hosted LLM

# Custom model configuration
# CUSTOM_MODEL_ID=gpt-oss-120b
# CUSTOM_MODEL_NAME=GPT OSS 120B
# CUSTOM_MODEL_DESC=Self-hosted LLM model via vLLM

# =============================================================================
# Example: Using a local vLLM server
# =============================================================================
# MODEL_PROVIDER=custom
# CUSTOM_API_KEY=dummy-key
# CUSTOM_MODEL_ENDPOINT=http://localhost:8000/v1
# CUSTOM_PROVIDER_NAME=Local vLLM
# CUSTOM_MODEL_ID=meta-llama/Llama-2-70b-chat-hf
# CUSTOM_MODEL_NAME=Llama 2 70B
# CUSTOM_MODEL_DESC=Locally hosted Llama 2 70B model

# =============================================================================
# Example: Using internal Kubernetes endpoint (with self-signed cert)
# =============================================================================
# MODEL_PROVIDER=custom
# CUSTOM_API_KEY=your-internal-api-key
# CUSTOM_MODEL_ENDPOINT=https://api.example.com/v1
# CUSTOM_PROVIDER_NAME=Internal Code AI
# CUSTOM_MODEL_ID=openai/gpt-oss-120b
# CUSTOM_MODEL_NAME=GPT OSS 120B
# CUSTOM_MODEL_DESC=Internal self-hosted GPT model for coding
# SSL_VERIFY=false  # Disable SSL verification for self-signed certs
